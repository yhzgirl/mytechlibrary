

<%= form_for @book do |b| %>
  
  <%= errors_for(@book, "Opps, unable to add/update book").html_safe %>
  <%= b.label :ISBN, 'ISBN' %>:
  <%= b.text_field :ISBN %> <br/>
  <%= b.label :title, 'Title of book' %>:
  <%= b.text_field :title %> <br/>
  <%= b.label :author, 'Author' %>:
  <%= b.text_field :author %><br/>
  <%= b.label :read, 'Read' %>?
  <%= b.radio_button :read, true %> <%= b.label :read, "Yes" %>
  <%= b.radio_button :read, false %> <%= b.label :read, "No" %><br/>
  I have this book in the following formats:<br/>
  <% Format.all.each do |format| %>
    <%= check_box_tag "book[format_ids][]", format.id, @book.format_ids.include?(format.id), id: dom_id(format) %>
    <%= label_tag dom_id(format), format.category %><br/>
  <% end %>
  <%= b.submit %>
<% end %>
